{
 "compilerOptions": {
    "outDir": "./dist/",
    "types": ["node", "jest"],
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "dom",
      "es6"
    ]
  },
  "exclude": [
    "node_modules",
    "./dist/**/*"
  ],
   "include": [
    "./src"
  ]
}
